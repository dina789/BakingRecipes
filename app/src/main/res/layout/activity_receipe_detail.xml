<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceipeDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28sp"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:text="@string/Recipe_Title" />

            <FrameLayout
                android:id="@+id/recipe_ingredient_container"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="wrap_content">
            </FrameLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FF0000FF" />
                <TextView
                    android:id="@+id/tv_title_step"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:text="@string/step_Title"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/recipe_step_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              </FrameLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



    </FrameLayout>